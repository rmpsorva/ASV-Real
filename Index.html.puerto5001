    <script>
        // =====================================================================
        // SISTEMA UNIFICADO: ASV-A AGI CORE + BNB CHAIN
        // =====================================================================

        // Configuraci√≥n BNB Chain
        const BSC_RPC = 'https://bsc-dataseed.binance.org/';
        const ASV_TOKEN_ADDRESS = '0x2682FA44105a60F2016FAa8909eA82d3d427bfFc';
        const ASV_TOKEN_ABI = [
            "function balanceOf(address) view returns (uint256)",
            "function transfer(address to, uint256 amount) returns (bool)",
            "function decimals() view returns (uint8)",
            "function symbol() view returns (string)",
            "function totalSupply() view returns (uint256)"
        ];

        // Configuraci√≥n AGI Core - CORRECCI√ìN CR√çTICA
        const AGI_API_URL = 'http://127.0.0.1:5001/api/agi_query';
        const AGI_HEALTH_URL = 'http://127.0.0.1:5001/api/status';

        let web3Provider = null;
        let userWallet = null;
        let currentNetwork = 'bsc';
        let asvTokenContract = null;

        // Elementos DOM
        const elements = {
            walletStatus: document.getElementById('walletStatus'),
            walletAddress: document.getElementById('walletAddress'),
            bnbBalance: document.getElementById('bnbBalance'),
            asvBalance: document.getElementById('asvBalance'),
            connectWalletBtn: document.getElementById('connectWalletBtn'),
            sendTokenBtn: document.getElementById('sendTokenBtn'),
            chatMessages: document.getElementById('chatMessages'),
            userInput: document.getElementById('userInput'),
            systemLog: document.getElementById('systemLog'),
            currentNetwork: document.getElementById('currentNetwork'),
            chainId: document.getElementById('chainId'),
            blockNumber: document.getElementById('blockNumber'),
            asvPrice: document.getElementById('asvPrice'),
            rpcStatus: document.getElementById('rpcStatus'),
            contractStatus: document.getElementById('contractStatus'),
            agiStatus: document.getElementById('agiStatus'),
            agiStatusIndicator: document.getElementById('agiStatusIndicator'),
            coreStatus: document.getElementById('coreStatus'),
            llmStatus: document.getElementById('llmStatus')
        };

        // =====================================================================
        // 1. SISTEMA AGI CORE - CONEXI√ìN AL PUERTO 5001
        // =====================================================================

        async function checkAGIConnection() {
            try {
                const response = await fetch(AGI_HEALTH_URL);
                const data = await response.json();
                
                if (response.ok) {
                    elements.agiStatus.textContent = 'CONECTADO';
                    elements.agiStatusIndicator.className = 'status-indicator status-online';
                    elements.coreStatus.textContent = 'ACTIVO';
                    elements.coreStatus.style.color = 'var(--neon-green)';
                    logSystem('‚úÖ AGI Core conectado en puerto 5001');
                    
                    // Actualizar informaci√≥n del modelo LLM
                    if (data.llm_model) {
                        elements.llmStatus.textContent = data.llm_model;
                    }
                    
                    return true;
                } else {
                    throw new Error(data.message || 'Error en AGI Core');
                }
            } catch (error) {
                elements.agiStatus.textContent = 'DESCONECTADO';
                elements.agiStatusIndicator.className = 'status-indicator status-offline';
                elements.coreStatus.textContent = 'INACTIVO';
                elements.coreStatus.style.color = 'var(--neon-red)';
                
                return false;
            }
        }

        // =====================================================================
        // 2. SISTEMA BNB CHAIN - TOKEN REAL ASV
        // =====================================================================

        async function connectBSCWallet() {
            if (typeof window.ethereum !== 'undefined') {
                try {
                    logSystem('üîó Conectando a BNB Chain...');
                    
                    const accounts = await window.ethereum.request({
                        method: 'eth_requestAccounts'
                    });

                    userWallet = accounts[0];
                    await setupBSCProvider();
                    updateWalletUI(true);
                    logSystem(`‚úÖ Wallet BSC conectada: ${userWallet.substring(0, 8)}...`);
                    await refreshBalances();
                    setupNetworkListeners();
                    
                } catch (error) {
                
                    addChatMessage('system', `Error: ${error.message}`);
                }
            } else {
              
                addChatMessage('system', 'Instala MetaMask para conectar tu wallet.');
            }
        }

        async function setupBSCProvider() {
            try {
                const chainId = await window.ethereum.request({ method: 'eth_chainId' });
                
                if (chainId !== '0x38') {
                    await window.ethereum.request({
                        method: 'wallet_switchEthereumChain',
                        params: [{ chainId: '0x38' }],
                    });
                }
                
                web3Provider = new ethers.providers.Web3Provider(window.ethereum);
                asvTokenContract = new ethers.Contract(ASV_TOKEN_ADDRESS, ASV_TOKEN_ABI, web3Provider);
                
                elements.rpcStatus.textContent = 'CONECTADO';
                elements.rpcStatus.style.color = 'var(--neon-green)';
                elements.contractStatus.textContent = 'CARGADO';
                elements.contractStatus.style.color = 'var(--neon-green)';
                
            } catch (error) {
                logSystem(`‚ö†Ô∏è Usando RPC p√∫blico de BSC: ${error.message}`);
                web3Provider = new ethers.providers.JsonRpcProvider(BSC_RPC);
                asvTokenContract = new ethers.Contract(ASV_TOKEN_ADDRESS, ASV_TOKEN_ABI, web3Provider);
            }
        }

        async function refreshBalances() {
            if (userWallet && web3Provider) {
                try {
                    // Balance BNB
                    const bnbBalance = await web3Provider.getBalance(userWallet);
                    const bnbFormatted = ethers.utils.formatEther(bnbBalance);
                    elements.bnbBalance.textContent = `${parseFloat(bnbFormatted).toFixed(4)} BNB`;
                    
                    // Balance ASV Tokens
                    if (asvTokenContract) {
                        const asvBalance = await asvTokenContract.balanceOf(userWallet);
                        const decimals = await asvTokenContract.decimals();
                        const asvFormatted = ethers.utils.formatUnits(asvBalance, decimals);
                        elements.asvBalance.textContent = `${parseFloat(asvFormatted).toFixed(2)} ASV`;
                    }
                    
                    // Block number
                    const block = await web3Provider.getBlockNumber();
                    elements.blockNumber.textContent = `#${block}`;
                    
                    updateASVPrice();
                    logSystem('üí∞ Balances actualizados');
                    
                }actualizando balances: ${error.message}`);
                }
            }
        }

        // =====================================================================
        // 3. SISTEMA DE CHAT UNIFICADO - AGI CORE + CONTEXTO BNB CHAIN
        // =====================================================================

        async function sendMessage() {
            const message = elements.userInput.value.trim();
            if (!message) return;

            addChatMessage('user', message);
            elements.userInput.value = '';
            
            // Preparar contexto completo para el AGI
            const agiContext = {
                prompt: message,
                user_wallet: userWallet || 'AN√ìNIMO/NO CONECTADO',
                network_id: currentNetwork,
                asv_balance: elements.asvBalance.textContent,
                bnb_balance: elements.bnbBalance.textContent,
                current_block: elements.blockNumber.textContent,
                asv_price: elements.asvPrice.textContent,
                timestamp: new Date().toISOString()
            };

            try {
                const response = await fetch(AGI_API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(agiContext)
                });

                const data = await response.json();
                
                if (data.response) {
                    addChatMessage('ai', data.response);
                    logSystem(`üß† AGI Response: ${data.response.substring(0, 50)}...`);
                } else {
                    addChatMessage('ai', 
                }
            } catch (error) {
                addChatMessage('ai',conectando al AGI Core (Puerto 5001). Verifica que est√© ejecut√°ndose.');
                logSystem(`üö® ERROR CR√çTICO: No se puede alcanzar el AGI Core en 5001. ${error.message}`);
            }
        }

        async function consultAGI(strategyType) {
            const strategies = {
                'liquidity_strategy': 'Analiza la estrategia de liquidez √≥ptima para el token ASV considerando el balance actual y las condiciones del mercado en BNB Chain.',
                'tokenomics_analysis': 'Realiza un an√°lisis token√≥mico completo del token ASV, considerando distribuci√≥n, utilidad y potencial de crecimiento en el ecosistema BSC.'
            };

            elements.userInput.value = strategies[strategyType];
            sendMessage();
        }

        // =====================================================================
        // 4. TRANSACCIONES TOKEN ASV
        // =====================================================================

        async function sendASVTokens() {
            if (!userWallet || !asvTokenContract) {
                addChatMessage('system', 'üîó Conecta tu wallet BSC primero');
                return;
            }

            const recipient = document.getElementById('tokenRecipient').value;
            const amount = document.getElementById('tokenAmount').value;

            if (!recipient || !amount) {
                addChatMessage('system', '‚ùå Completa direcci√≥n y cantidad');
                return;
            }

            try {
                const signer = web3Provider.getSigner();
                const tokenWithSigner = asvTokenContract.connect(signer);
                const decimals = await asvTokenContract.decimals();
                
                logSystem(`üîÑ Enviando ${amount} ASV...`);
                addChatMessage('user', `üí∏ Enviando ${amount} ASV tokens...`);

                const amountInWei = ethers.utils.parseUnits(amount, decimals);
                const tx = await tokenWithSigner.transfer(recipient, amountInWei);

                logSystem(`üì§ Transacci√≥n ASV enviada: ${tx.hash}`);
                addChatMessage('system', `‚úÖ Transacci√≥n ASV enviada: ${tx.hash.substring(0, 16)}...`);

                const receipt = await tx.wait();
                logSystem(`‚úÖ Transacci√≥n ASV confirmada en bloque ${receipt.blockNumber}`);
                addChatMessage('system', `üéâ ASV transferidos exitosamente`);

                await refreshBalances();

            } catch (error) {
                logSystem(`‚ùå Error en transacci√≥n ASV: ${error.message}`);
                addChatMessage('system', `üí• Error: ${error.message}`);
            }
        }

        async function getASVPrice() {
            addChatMessage('system', 'üîÑ Consultando an√°lisis de precio al AGI...');
            
            // Consulta espec√≠fica al AGI sobre precio
            elements.userInput.value = 'Analiza el precio actual del token ASV y proporciona insights sobre su valoraci√≥n, tendencias de mercado y factores que podr√≠an influir en su precio en BNB Chain. Considera el balance actual del usuario y las condiciones del mercado.';
            sendMessage();
        }

        // =====================================================================
        // 5. UTILIDADES DEL SISTEMA UNIFICADO
        // =====================================================================

        function addChatMessage(sender, text) {
            const messageDiv = document.createElement('div');
            
            let messageClass = 'ai-message';
            let senderName = 'üß† ASV-A AGI';
            
            if (sender === 'user') {
                messageClass = 'user-message';
                senderName = 'üë§ T√ö';
            } else if (sender === 'system') {
                messageClass = 'system-message';
                senderName = 'üîó SISTEMA';
            }
            
            messageDiv.className = `message ${messageClass}`;
            messageDiv.innerHTML = `<strong>${senderName}:</strong> ${text}`;
            
            elements.chatMessages.appendChild(messageDiv);
            elements.chatMessages.scrollTop = elements.chatMessages.scrollHeight;
        }

        function logSystem(message) {
            const now = new Date().toLocaleTimeString();
            const logEntry = document.createElement('div');
            logEntry.className = 'log-entry';
            logEntry.textContent = `[${now}] ${message}`;
            elements.systemLog.appendChild(logEntry);
            elements.systemLog.scrollTop = elements.systemLog.scrollHeight;
        }

        function updateWalletUI(connected) {
            if (connected) {
                elements.walletStatus.textContent = 'CONECTADO BSC';
                elements.walletStatus.style.color = 'var(--neon-green)';
                elements.walletAddress.textContent = userWallet;
                elements.connectWalletBtn.textContent = 'BSC CONECTADA';
                elements.connectWalletBtn.style.background = 'var(--neon-green)';
                elements.sendTokenBtn.disabled = false;
                elements.currentNetwork.textContent = 'BNB Chain';
                elements.chainId.textContent = '56';
            } else {
                elements.walletStatus.textContent = 'DESCONECTADO';
                elements.walletStatus.style.color = 'var(--neon-red)';
                elements.walletAddress.textContent = '---';
                elements.bnbBalance.textContent = '0 BNB';
                elements.asvBalance.textContent = '0 ASV';
                elements.connectWalletBtn.textContent = 'CONECTAR WALLET BSC';
                elements.connectWalletBtn.style.background = 'var(--neon-yellow)';
                elements.sendTokenBtn.disabled = true;
            }
        }

        function updateASVPrice() {
            const simulatedPrice = (Math.random() * 0.1 + 0.01).toFixed(6);
            elements.asvPrice.textContent = `$${simulatedPrice}`;
        }

        function setupNetworkListeners() {
            if (window.ethereum) {
                window.ethereum.on('accountsChanged', (accounts) => {
                    if (accounts.length === 0) {
                        logSystem('üîê Wallet desconectada');
                        updateWalletUI(false);
                    } else {
                        userWallet = accounts[0];
                        updateWalletUI(true);
                        refreshBalances();
                    }
                });

                window.ethereum.on('chainChanged', (chainId) => {
                    logSystem(`üîÑ Red cambiada: ${chainId}`);
                    if (chainId === '0x38') {
                        elements.currentNetwork.textContent = 'BNB Chain';
                        elements.chainId.textContent = '56';
                    } else {
                        elements.currentNetwork.textContent = 'Otra Red';
                        elements.chainId.textContent = chainId;
                    }
                    refreshBalances();
                });
            }
        }

        function switchNetwork(network) {
            const buttons = document.querySelectorAll('.network-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            currentNetwork = network;
            logSystem(`üåê Cambiando a ${network.toUpperCase()}`);
        }

        async function refreshAllSystems() {
            logSystem('üîÑ Actualizando todos los sistemas...');
            await checkAGIConnection();
            await refreshBalances();
            logSystem('‚úÖ Todos los sistemas actualizados');
        }

        function clearChat() {
            elements.chatMessages.innerHTML = `
                <div class="message agi-message">
                    <strong>üß† ASV-A AGI:</strong> Sistema unificado BNB Chain + AGI Core inicializado. Token ASV: 0x2682FA44105a60F2016FAa8909eA82d3d427bfFc
                </div>
                <div class="message system-message">
                    <strong>üîó CONTRATO ASV:</strong> 0x2682FA44105a60F2016FAa8909eA82d3d427bfFc
                </div>
            `;
            logSystem('üóëÔ∏è Chat limpiado');
        }

        function initializePriceChart() {
            const ctx = document.getElementById('priceChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['1H', '6H', '12H', '24H'],
                    datasets: [{
                        label: 'ASV Price',
                        data: [0.015, 0.018, 0.016, 0.017],
                        borderColor: '#ffd700',
                        backgroundColor: 'rgba(255, 215, 0, 0.1)',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { display: false },
                        x: { display: true }
                    }
                }
            });
        }

        // =====================================================================
        // 6. INICIALIZACI√ìN DEL SISTEMA UNIFICADO
        // =====================================================================

        document.addEventListener('DOMContentLoaded', function() {
            // Configurar event listeners
            elements.connectWalletBtn.addEventListener('click', connectBSCWallet);
            elements.userInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') sendMessage();
            });

            // Inicializar sistemas
            initializePriceChart();
            checkAGIConnection();

            // Verificar wallet existente
            if (typeof window.ethereum !== 'undefined') {
                window.ethereum.request({ method: 'eth_accounts' })
                    .then(accounts => {
                        if (accounts.length > 0) {
                            userWallet = accounts[0];
                            setupBSCProvider().then(() => {
                                updateWalletUI(true);
                                refreshBalances();
                            });
                        }
                    });
            }

            logSystem('üéâ Sistema ASV-A AGI + BNB Chain completamente inicializado');
            logSystem('üöÄ Ready for AGI-powered DeFi operations');
        });
    </script>
</body>
</html>
